<% @page_title = t(:professional).pluralize(locale) %>

<%= link_to("<< " + t(:return_to), professionals_path, :class => 'back-link') %>

<div class="professionals edit">
  <h2><%= t(:update) + " " + t(:professional) %></h2>

  <%= form_for(@professional) do |f| %>

    <%= render(:partial => "form", :locals => {:f => f}) %>

    <div class="form-buttons">
      <%= submit_tag(t(:edit) + " " + t(:professional)) %>
    </div>

  <% end %>

</div>